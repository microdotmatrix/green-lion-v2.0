---
import "@/styles/global.css";

import Footer from "@/components/layout/footer.astro";
import Header from "@/components/layout/header.astro";
import Meta from "@/components/layout/meta.astro";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Green Lion Innovations is a Denver, CO based business strategy firm focused on early stage development in the regulated cannabis industry",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <Meta title={`${title} | Green Lion Innovations`} description={description} />
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
